{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [ "esnext" ],
    "module": "commonjs",
    "outDir": "build",
    "paths": {
      "*": [ "./types/*" ]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2019"
  },
  "include": [
    "./src/**/*.ts",
    "./docker/**/*.ts",
    "./test/**/*.ts",
    "./types"
  ]
}
