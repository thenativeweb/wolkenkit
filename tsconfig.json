{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [ "ES2019" ],
    "module": "CommonJS",
    "outDir": "build",
    "resolveJsonModule": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": [
    "./docker/**/*.ts",
    "./lib/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./build/**/*.ts",
    "./templates/**/*.ts",
    "./websites/**/*.ts",
    "./websites/**/*.tsx"
  ]
}
