version: '<%= versions.infrastructure['docker-compose'] %>'

services:
  mongodb:
    image: bitnami/mongodb:<%= versions.dockerImages.mongodb %>
    environment:
      MONGODB_ROOT_PASSWORD: please-replace-this
      MONGODB_USERNAME: wolkenkit
      MONGODB_PASSWORD: please-replace-this
      MONGODB_DATABASE: wolkenkit
      MONGODB_REPLICA_SET_MODE: primary
      MONGODB_REPLICA_SET_NAME: rs0
      MONGODB_REPLICA_SET_KEY: secret
    restart: always
    volumes:
      - mongodb:/bitnami/mongodb

volumes:
  mongodb:
